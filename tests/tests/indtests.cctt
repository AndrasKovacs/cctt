data Foo := R | G | B;
foo : Foo := G;

data ℕ := zero | suc ℕ;

czero (n : ℕ) : ℕ :=
  case n (_. ℕ) [
    zero. zero;
    suc n. czero n];

add : ℕ → ℕ → ℕ := λ[
  zero. λ x. x;
  suc n. λ x. suc (add n x)];

five := suc (suc (suc (suc (suc zero))));

ten := add five five;

mul (n m : ℕ) : ℕ :=
  case n (_. ℕ) [
    zero. zero;
    suc n. add m (mul n m)];

n100 := mul ten ten;

mul2 (n m : ℕ) : ℕ := case n [zero. zero; suc n. add m (mul2 n m)];

n1k := mul2 ten n100;

