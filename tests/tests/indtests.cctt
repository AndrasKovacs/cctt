data List (A : U) := nil | cons A (List A);

map (A B : U) (f : A → B)(as : List A) : List B :=
  case as (_. List B) [
    nil. nil;
    cons a as. cons (f a) (map A B f as)];

list1 : List ℕ := cons ten (cons ten (cons ten nil));
list2 := map ℕ ℕ (λ _. zero) list1;

