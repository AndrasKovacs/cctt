build-type:     Simple

source-repository head
  type: git
  location: https://github.com/AndrasKovacs/cctt

flag debug
  description: turn on debug info printing
  manual: True
  default: False

flag dump
  description: dump core, stg and cmm to files
  manual: True
  default: False

flag emptyhcomstats
  description: turn on empty hcom counting
  manual: True
  default: False

flag llvm
  description: use llvm for codegen
  manual: True
  default: False

executable cctt
  main-is: Main.hs
  other-modules:
      Common
      Conversion
      Core
      CoreTypes
      Cubical
      Cubical.Cofibration
      Cubical.Interval
      Cubical.Substitution
      Data.IVarSet
      Data.LvlMap
      Elaboration
      ElabState
      Errors
      Lexer
      MainInteraction
      Parser
      Presyntax
      Pretty
      Quotation
      Statistics
      Paths_cctt
  hs-source-dirs:
      src
  default-extensions:
      AllowAmbiguousTypes
      BangPatterns
      BlockArguments
      CPP
      ConstraintKinds
      DataKinds
      DerivingVia
      EmptyDataDeriving
      ExplicitNamespaces
      FlexibleContexts
      FlexibleInstances
      FunctionalDependencies
      GADTs
      ImplicitParams
      InstanceSigs
      KindSignatures
      LambdaCase
      MagicHash
      MultiParamTypeClasses
      OverloadedStrings
      PackageImports
      PatternSynonyms
      PolyKinds
      QualifiedDo
      RankNTypes
      ScopedTypeVariables
      StandaloneDeriving
      StandaloneKindSignatures
      Strict
      TemplateHaskell
      TypeApplications
      TypeFamilies
      TypeFamilyDependencies
      UnboxedSums
      UnboxedTuples
      UndecidableInstances
      UnicodeSyntax
      ViewPatterns
  ghc-options: -O2 -fdicts-strict -fmax-worker-args=18 -fspecialise-aggressively -fexpose-all-unfoldings -fplugin StrictImplParams -fworker-wrapper-cbv -rtsopts -threaded -with-rtsopts= "-N4 -A8M -qb0" -Wall -Wno-name-shadowing -Wno-missing-signatures -Wno-unused-do-bind -Wno-unused-matches -Wno-missing-pattern-synonym-signatures -fmax-relevant-binds=3 -fmax-valid-hole-fits=0
  build-depends:
      base >=4.7 && <5
    , bytestring
    , containers
    , directory
    , filepath
    , flatparse
    , ghc-prim
    , microlens
    , microlens-th
    , primdata
    , split
    , strict-impl-params
    , template-haskell
    , time
  default-language: Haskell2010
  if flag(dump)
    ghc-options: -ddump-simpl -ddump-stg-final -ddump-cmm -dsuppress-all -dno-suppress-type-signatures -ddump-to-file
  if flag(llvm)
    ghc-options: -fllvm
  if flag(debug)
    cpp-options: -DDEBUG
  if flag(emptyhcomstats)
    cpp-options: -DEMPTYHCOMSTATS
